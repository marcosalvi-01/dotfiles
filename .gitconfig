[core]
    editor = nvim
    excludesfile = ~/.gitignore_global

[color]
    ui = auto

[fetch]
    prune = true

[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[user]
	email = marco.salvi@ingv.it
	name = Marco Salvi
[credential]
	helper = osxkeychain

[branch]
    sort = -committerdate
[tag]
    sort = -version:refname
[diff]
    algorithm = histogram
[maintenance]
    auto = true
    strategy = incremental
